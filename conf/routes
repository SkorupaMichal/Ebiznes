
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# koszyk
GET     /baskets/:id                            controllers.BasketController.getBasketByID(id:Int)
POST    /createbasket                       controllers.BasketController.createBasket
POST    /updatebasket/:id                   controllers.BasketController.addToBasket(id:Int)
DELETE  /deletebasket/:id                   controllers.BasketController.deleteBasket(id:Int)
# Produkty
GET     /products                           controllers.ProductController.getProducts
POST    /createproduct                      controllers.ProductController.createProduct
POST    /updateproduct/:productId           controllers.ProductController.updateProduct(productId:Int)
DELETE  /product/:productId                 controllers.ProductController.deleteProduct(productId:Int)
# Kategorie
GET     /categories                         controllers.CategoryController.getCategories
POST    /createcategory                     controllers.CategoryController.createCategories
POST    /updatecategory/:categoryId         controllers.CategoryController.updateCategory(categoryId:Int)
DELETE  /deletecategory/:categoryId         controllers.CategoryController.deleteCategory(categoryId:Int)
# Komentarze do produktow
GET     /comments/:productId                controllers.CommentController.getComments(productId :Int)
POST    /createcomment/:productId           controllers.CommentController.createComment(productId :Int)
POST    /updatecomment/:productId           controllers.CommentController.updateComment(productId:Int)
DELETE  /deletecomment/:productId           controllers.CommentController.deleteComment(productId:Int)
# Zdjecia prodotkow
GET     /images                             controllers.ImageController.getImages
POST    /createimage                        controllers.ImageController.createImage
POST    /updateimage/:imageId               controllers.ImageController.updateImage(imageId:Int)
DELETE  /deleteimage/:imageId               controllers.ImageController.deleteImage(imageId:Int)
# Zamowienia
GET     /orders                             controllers.OrderController.getOrders
POST    /createorder                        controllers.OrderController.createOrder
POST    /updateorder/:orderId               controllers.OrderController.updateOrder(orderId:Int)
DELETE  /order/:orderId                     controllers.OrderController.deleteOrder(orderId:Int)
# Dostawy
GET     /delivers                           controllers.DeliveryController.getDelivery
POST    /createdeliver                      controllers.DeliveryController.createDelivery
POST    /updatedeliver/:deliverId           controllers.DeliveryController.updateDelivery(deliverId:Int)
DELETE  /deletedeliver/:deliverId           controllers.DeliveryController.deleteDelivery(deliverId:Int)
# Statystyki
#GET     /statistics                         controllers.StatisticsController.getStatistics
#GET     /statistic                          controllers.StatisticsController.createStatistic
#GET     /updatestatistic/:statisticId       controllers.StatisticsController.updateStatistic(statisticId:Int)
#GET     /deletestatistic/:statisticId       controllers.StatisticsController.deleteStatistic(statisticId:Int)
#Zestawy produkt√≥w
GET     /productsSets                       controllers.ProductSetController.getProductSets
POST    /createproductsSet                  controllers.ProductSetController.createProductSet
POST    /updateproductsSet/:ProductSetId    controllers.ProductSetController.updateProductSet(ProductSetId:Int)
DELETE  /deleteproductsSet/:ProductSetId    controllers.ProductSetController.deleteProductSet(ProductSetId:Int)
#Rodzaje platnosci
GET     /paymentmethods                         controllers.PaymentMethodsController.getPaymentMethods
POST    /createpaymentmethod                    controllers.PaymentMethodsController.createPaymentMethod
POST    /updatepaymentmethod/:paymentMethodId   controllers.PaymentMethodsController.updatePaymentMethod(paymentMethodId:Int)
DELETE  /deletepaymentmethod/:paymentMethodId   controllers.PaymentMethodsController.deletePaymentMethod(paymentMethodId:Int)
#Podkateggorie
GET 	/subcategories						controllers.SubCategoryController.getSubCategories
POST 	/createsubcategory 				    controllers.SubCategoryController.getSubcategory
POST 	/updatesubcategory/:categoryId 		controllers.SubCategoryController.addSubCategory(categoryId:Int)
DELETE 	/deletesubcategory/:categoryId 		controllers.SubCategoryController.removeSubCategory(categoryId:Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
